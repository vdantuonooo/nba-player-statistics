<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AvancedStatsFragment">

    <RelativeLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/backarrow"
                android:layout_weight="5"
                android:layout_width="25dp"
                android:paddingVertical="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>


            <TextView
                android:id="@+id/playerName"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="95"
                android:ellipsize="end"
                android:fontFamily="@font/street_power"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topHeader"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="20dp">
        <ImageView
            android:id="@+id/playerPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/placeholder"/>
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storico Annale"
            android:textColor="@color/black"
            android:fontFamily="@font/street_power"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/totalYears"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/street_power"
            android:gravity="center"
            android:text="Miglior Media Realizzativa"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="anno"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/bestSeason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="2020-21"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="punti"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/avgPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="anno"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/street_power"
            android:gravity="center"
            android:text="Miglior Media Assist"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="anno"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/bestSeasonAssist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="2020-21"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="ast"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/avgAssist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="anno"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/street_power"
            android:gravity="center"
            android:text="Miglior Media Rimbalzi"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="anno"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/bestSeasonRebounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="2020-21"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="reb"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/avgRebounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="anno"
                android:textColor="@color/black"
                android:fontFamily="@font/street_power"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"/>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andamento Punti Annuale"
            android:textColor="@color/black"
            android:fontFamily="@font/street_power"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartPoints"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andamento Assist Annuale"
            android:textColor="@color/black"
            android:fontFamily="@font/street_power"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartAssist"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andamento Rimbalzi Annuale"
            android:textColor="@color/black"
            android:fontFamily="@font/street_power"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartRebounds"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>